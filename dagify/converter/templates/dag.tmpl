# Apache Airflow Base Imports
{%- for import in baseline_imports %}
{{import}}
{%- endfor %}
# Apache Airflow Custom & DAG/Task Specific Imports
{%- for import in custom_imports %}
{{import}}
{%- endfor %}

default_args = {
    'owner': 'airflow',
}

with DAG(
    dag_id="{{dag_id}}",
    start_date=datetime.datetime(2024, 1, 1),
    #schedule="@daily",
    schedule_interval='*/5 * * * *',
    catchup=False,
) as dag:

    # DAG Tasks
    {%- for task in tasks %}
    {{task | indent(4)}}
    {%- endfor %}

    {% if dependencies_int|length > 0 %}
    # Airflow Task Internal Dependencies
    {%- for dependency in dependencies_int %}
    {{dependency | indent(4)}}
    {%- endfor %}
    {% endif %}

    {% if dependencies_ext|length > 0 %}
    # Airflow Task External Dependencies
    {% for dependency in dependencies_ext %}
    {{ dependency['task_name'] }} = ExternalTaskMarker(
        task_id="{{ dependency['task_name'] }}",
        external_dag_id='{{ dependency['ext_dag'] }}',
        external_task_id='{{ dependency['ext_dep_task'] }}'
    )
    {% endfor %}
    {% endif %}

    {% if bwd_dependencies_ext|length > 0 %}
    # Airflow Backward Task External Dependencies
    {% for bwd_dependency in bwd_dependencies_ext %}
    {{ bwd_dependency['task'] }}_sensor = ExternalTaskSensor(
        task_id="{{ bwd_dependency['task'] }}",
        external_dag_id="{{ bwd_dependency['other_dags_name'] }}",
        external_task_id="{{ bwd_dependency['task_in_other_dag'] }}",
        dag=dag
    )
    {{ bwd_dependency['task'] }}_sensor >> {{ bwd_dependency['task'] }}
    {% endfor %}
    {% endif %}